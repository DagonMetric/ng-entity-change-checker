{
  "$schema": "./node_modules/lib-tools/schemas/schema.json",
  "projects": {
    "ng-entity-change-checker": {
      "tasks": {
        "build": {
          "outputPath": "dist/packages/ng-entity-change-checker",
          "script": {
            "compilations": "auto",
            "umdId": "ngEntityChangeChecker"
          }
        },
        "test": {
          "testIndexFile": "test/index.ts",
          "tsConfig": "tsconfig.test.json",
          "envOverrides": {
            "ci": {
              "codeCoverageExclude": [
                "**/test.ts",
                "**/index.ts",
                "**/public_api.ts"
              ],
              "reporters": [
                "junit",
                "coverage"
              ],
              "browsers": [
                "ChromeHeadlessCI"
              ],
              "singleRun": true
            }
          }
        }
      }
    }
  }
}